<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.tje.lgtwins.CalendarAndResultActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E1E1E1"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:textAlignment="center"
            android:id="@+id/yearSelectSpinner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/yearSelectSpinner"
            android:spinnerMode="dropdown">

        </Spinner>

        <Spinner
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/monthSelectSpinner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/monthSelectSpinner"
            android:spinnerMode="dropdown">

        </Spinner>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/winLoseResultLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        </LinearLayout>

    </ScrollView>


</LinearLayout>
